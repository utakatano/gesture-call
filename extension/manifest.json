{
  "manifest_version": 3,
  "name": "Gesture Call",
  "version": "1.0.0",
  "description": "手の動きを検知してアクションをトリガーするジェスチャー認識システム",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "offscreen"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "dist/src/background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gesture Call - ジェスチャー認識"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/camera_utils.js",
        "libs/control_utils.js", 
        "libs/drawing_utils.js",
        "libs/hands.js",
        "dist/src/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "libs/*.js",
        "libs/*.wasm", 
        "libs/*.data",
        "libs/*.tflite",
        "libs/*.binarypb"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}